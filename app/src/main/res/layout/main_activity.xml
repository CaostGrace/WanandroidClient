            android:id="@+id/mine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:badgeBackgroundColor="@color/badge_color"
            app:tabIconNormal="@mipmap/icon_main_bottom_mine_normal"
            app:tabIconSelected="@mipmap/icon_main_bottom_mine_select"
            app:tabText="我的"
            app:tabTextSize="@dimen/text_small"
