        <com.yinglan.alphatabs.AlphaTabView
            android:id="@+id/project"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:badgeBackgroundColor="@color/badge_color"
            app:tabIconNormal="@mipmap/icon_main_bottom_project_normal"
            app:tabIconSelected="@mipmap/icon_main_bottom_project_select"
            app:tabText="项目"
            app:tabTextSize="@dimen/text_small"
            app:textColorNormal="@color/mian_bottom_text_normal"
            app:textColorSelected="@color/mian_bottom_text_select"/>


